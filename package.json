{
  "name": "node-date-utilities",
  "version": "1.1.1",
  "description": "A module that adds new methods to the native Date class.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PedroS11/node-date-utilities.git"
  },
  "scripts": {
    "build": "tsc",
    "ci": "npm run lint && npm run build && npm run cover",
    "lint": "eslint '*/**/*.ts' --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run ci",
    "postversion": "git push && git push --tags",
    "cover": "istanbul cover npm run test:coverage",
    "release:major": "npm version major && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:patch": "npm version patch && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "jest"
    ]
  },
  "author": "Pedro Silva <pedrosilva1137@gmail.com>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "date",
    "utils",
    "javascript",
    "typescript"
  ],
  "devDependencies": {
    "@types/istanbul": "^0.4.30",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^8.0.3",
    "istanbul": "^0.4.5",
    "jest": "^26.0.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
